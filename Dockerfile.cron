# Use Node.js image
FROM node:20-alpine

WORKDIR /app

# Copy package files and install dependencies
COPY package*.json ./
RUN npm ci --only=production

# Install additional dependencies needed for cron jobs
RUN npm install node-cron axios pg rss-parser dotenv

# Create podcasts directory
RUN mkdir -p ./public/podcasts

# Copy only the JavaScript cron runner
COPY cron-runner.js ./

# Start the cron job runner
CMD ["node", "cron-runner.js"]